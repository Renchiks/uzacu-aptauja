<!DOCTYPE html>
<html lang="lv">
<head>
  <meta charset="UTF-8" />
  <title>Uzacu Laminēšanas Aptauja</title>
</head>
<body>
  <h1>Uzacu laminēšanas aptauja</h1>
  <form id="surveyForm">
    <label>Vārds: <input type="text" name="name" required /></label><br>
    <label>E-pasts: <input type="email" name="email" required /></label><br>
    <label>Vai Tevi interesē uzacu laminēšana?
      <select name="interested" required>
        <option value="Jā">Jā</option>
        <option value="Nē">Nē</option>
        <option value="Varbūt">Varbūt</option>
      </select>
    </label><br>
    <label>Papildus komentāri:<br>
      <textarea name="comments"></textarea>
    </label><br>
    <button type="submit">Sūtīt</button>
  </form>

  <script>
    document.getElementById('surveyForm').addEventListener('submit', async function (e) {
      e.preventDefault();
      const formData = new FormData(this);
      const data = Object.fromEntries(formData.entries());

      const response = await fetch('https://smartsystem.app.n8n.cloud/webhook-test/uzacu-aptauja', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        alert('Paldies! Jūsu atbildes ir saņemtas.');
      } else {
        alert('Kļūda. Mēģiniet vēlreiz.');
      }
    });
  </script>
</body>
</html>
